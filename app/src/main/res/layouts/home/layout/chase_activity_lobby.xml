<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/chase_activity_lobby_textview_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Status" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/chase_activity_lobby_linearlayout_options"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/chase_activity_lobby_button_create_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Be the SPY" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/chase_activity_lobby_edittext_join_id_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Input SPY id" />

                <Button
                    android:id="@+id/chase_activity_lobby_button_join_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Be the SENTRY. Find the spy." />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1" />

            <Button
                android:id="@+id/chase_activity_lobby_button_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EXIT" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/chase_activity_lobby_linearlayout_joining"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: " />

                <TextView
                    android:id="@+id/chase_activity_lobby_textview_joining_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    tools:text="SAMPLE_KEY" />

            </LinearLayout>

            <ProgressBar
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiting for other player..." />
        </LinearLayout>


    </FrameLayout>

</LinearLayout>